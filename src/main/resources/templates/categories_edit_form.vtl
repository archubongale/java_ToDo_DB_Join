<div >
  <h1>Edit a Category</h1>
  <form class="form-inline" action="/categories/$category.getId()/edit" method="post">
    <div class="form-group">
      <label for="new_name">Name</label>
      <input type="checkbox" class="form-control" id="new_name" name="new_name" value="$category.getName()">
    </div>
    <!-- <input type="hidden" name="stylist_id" id="stylist_id" value="$stylist.getId()"> -->
    <button type="submit" class="btn btn-default">Update</button>
  </form>
</div>
